<plominodatabase id="iol_suap">
  <design>
    <element id="allegati-scia-test" title="allegati-scia-test" type="PlominoForm">
      <id type="Products.Archetypes.Field.StringField">allegati-scia-test</id>
      <onCreateDocument type="Products.Archetypes.Field.TextField"><![CDATA[]]></onCreateDocument>
      <onOpenDocument type="Products.Archetypes.Field.TextField"><![CDATA[]]></onOpenDocument>
      <beforeSaveDocument type="Products.Archetypes.Field.TextField"><![CDATA[########## IMPORTANTE SETTO UN ITEM CON IL NOME DELLA FORM PER RISETTARE LA FORM DOPO IL SALVATAGGIO 
context.setItem('IOL_PREVIOUS_FORM',context.getItem('Form'))]]></beforeSaveDocument>
      <onSaveDocument type="Products.Archetypes.Field.TextField"><![CDATA[########## IMPORTANTE SETTO LA FORM PRECEDENTE ALL'APERTURA 
context.setItem('Form',context.getItem('IOL_PREVIOUS_FORM'))
context.removeItem('IOL_PREVIOUS_FORM')
return "%s/EditDocument?openwithform=00-completata" %context.absolute_url()]]></onSaveDocument>
      <onDeleteDocument type="Products.Archetypes.Field.TextField"><![CDATA[]]></onDeleteDocument>
      <onSearch type="Products.Archetypes.Field.TextField"><![CDATA[]]></onSearch>
      <beforeCreateDocument type="Products.Archetypes.Field.TextField"><![CDATA[]]></beforeCreateDocument>
      <FormLayout type="Products.Archetypes.Field.TextField"><![CDATA[<div class="pagina-suap">
<p><a name="allegati"></a><span class="label"> Quadro riepilogativo della documentazione allegata </span></p>
<div class="riquadro"><div class="titolo"><span>DOCUMENTAZIONE ALLEGATA ALLA SCIA</span></div></div>
<div class="riquadro"><div class="titolo"><span>ALTRE SEGNALAZIONI O COMUNICAZIONI PRESENTATE IN ALLEGATO ALLA SCIA (scia unica)</span></div></div>
<div class="riquadro"><div class="titolo"><span>RICHIESTA DI AUTORIZZAZIONI PRESENTATA CONTESTUALMENTE ALLA SCIA O ALLA SCIA UNICA (scia condizionata)</span></div></div>
<div class="riquadro"><div class="titolo"><span>ALTRI ALLEGATI</span></div></div>
</div>]]></FormLayout>
